<html>
<head>
  <title>Search Stuff</title>
</head>

<body>
  <form action="search" method="get">
    <input name="q" value="<%= q %>" />
    <input type="submit" value="Search!" />
  </form>

  <% reduced.keys.sort.each do |key| %>
    <h3><%= key %></h3>

    <ol>
      <% reduced[key].each do |result| %>
        <% name = Pathname(result[:name]).basename; ext = name.extname; realname = name.to_s.gsub(ext, '') %>

        <li><a href="http://localhost:8000/<%= realname %>.pdf"><%= realname %></a></li>
      <% end %>
    </ol>

    <hr />
  <% end %>
</body>
</html>